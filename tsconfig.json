{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["src/lib/*"],
            "@routes/*": ["src/routes/*"],
            "@views/*": ["src/views/*"]
        }
    },
    "include": ["src"]
}
