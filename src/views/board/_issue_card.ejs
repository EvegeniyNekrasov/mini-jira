<article data-issue="<%= issue.id %>" draggable="true" class="bg-white border rounded-xl p-3 shadow-sm">
  <div class="flex items-center justify-between">
    <h3 class="font-medium"><%= issue.title %></h3>
    <span class="<%= issue.status === 'TODO' 
        ? 'bg-gray-100 text-gray-600'
        : issue.status === 'IN_PROGRESS' 
          ? 'bg-yellow-100 text-yellow-700' 
          : 'bg-green-100 text-green-700' %> px-2 py-1 rounded text-xs font-medium">
      <%= issue.status %>
    </span>
  </div>
  <% if (issue.description) { %>
  <p class="text-sm text-zinc-600 mt-1"><%= issue.description %></p>
  <% } %>
  <div class="mt-2 text-xs text-zinc-500">#<%= issue.id.slice(0,6) %></div>
</article>